{
  "name": "vite-electron-builder-react",
  "description": "Secure boilerplate for Electron app based on Vite",
  "version": "1.0.2",
  "private": true,
  "author": {
    "email": "jadyyang@gmail.com",
    "name": "Jady Yang",
    "url": "https://github.com/jadyyang/vite-electron-builder-react"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "turbo build:all",
    "build:main": "cd ./packages/main && tsc && vite build",
    "build:preload": "cd ./packages/preload && tsc && vite build",
    "build:renderer": "cd ./packages/renderer && tsc && vite build",
    "bytenode": "ncc build packages/main/dist/index.cjs -o packages/main/dist -e electron && cross-env npm_config_arch=ia32 electron scripts/bytenode.js",
    "compile": "cross-env MODE=production pnpm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "test": "pnpm run test:main && pnpm run test:preload && pnpm run test:renderer && pnpm run test:e2e",
    "test:e2e": "pnpm run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "start": "node scripts/watch.mjs",
    "lint": "eslint . --ext js,mjs,cjs,ts,mts,cts,tsx",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck:main && npm run typecheck:preload && npm run typecheck:renderer",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.mjs",
    "prepare": "husky install",
    "format": "npx prettier --write \"**/*.{js,mjs,cjs,ts,mts,cts,tsx,json}\""
  },
  "devDependencies": {
    "@loadable/component": "^5.15.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/loadable__component": "^5.13.4",
    "@types/node": "18.15.13",
    "@types/react": "^18.0.34",
    "@types/react-dom": "^18.0.11",
    "@types/semver": "^7.3.13",
    "@typescript-eslint/eslint-plugin": "5.59.0",
    "@vercel/ncc": "^0.36.1",
    "@vitejs/plugin-react-swc": "^3.3.0",
    "ajv": "^8.12.0",
    "axios": "^1.3.5",
    "bytenode": "^1.4.0",
    "cross-env": "7.0.3",
    "electron": "24.1.2",
    "electron-builder": "23.6.0",
    "electron-store": "^8.1.0",
    "electron-updater": "5.3.0",
    "eslint": "8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "9.8.4",
    "husky": "^8.0.0",
    "playwright": "1.32.3",
    "prettier": "^2.8.7",
    "pretty-quick": "^3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.10.0",
    "sass": "^1.61.0",
    "semver": "^7.4.0",
    "sudo-prompt": "^9.2.1",
    "turbo": "^1.9.3",
    "typescript": "5.0.4",
    "unplugin-auto-expose": "0.0.4",
    "vite": "4.3.1",
    "vitest": "0.30.1"
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-updater": "5.3.0"
  },
  "engines": {
    "pnpm": ">=8"
  }
}
